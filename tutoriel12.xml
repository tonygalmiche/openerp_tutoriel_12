    <record model="ir.ui.view" id="tutoriel12_form_view">
        <field name="name">Tutoriel 12 Form View</field>
        <field name="model">tutoriel12</field>
        <field name="arch" type="xml">     
            <form string="Formulaire" version="7.0">  
